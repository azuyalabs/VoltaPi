# All the configuration variables must start with VOLTAPI_

[ -n "$VOLTAPI_OS_USER" ] || VOLTAPI_OS_USER=pi

[ -n "$VOLTAPI_HTTPD_BASE_DIR" ] || VOLTAPI_HTTPD_BASE_DIR=/var/www/volta
[ -n "$VOLTAPI_HTTPD_DOCUMENT_ROOT" ] || VOLTAPI_HTTPD_DOCUMENT_ROOT=/var/www/volta/public

# Volta Repository & branch
[ -n "$VOLTAPI_VOLTA_REPO" ] || VOLTAPI_VOLTA_REPO=https://github.com/azuyalabs/Volta.git
[ -n "$VOLTAPI_VOLTA_REPO_BRANCH" ] || VOLTAPI_VOLTA_REPO_BRANCH=develop